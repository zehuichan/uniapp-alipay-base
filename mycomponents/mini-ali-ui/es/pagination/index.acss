.am-pageInfinite{position:relative;width:100%;box-sizing:border-box}.am-pageInfinite_content{position:absolute;top:0;left:0;width:100%}.am-pageInfinite_content::-webkit-scrollbar{display:none}.am-pageInfiniteWrap{position:absolute;bottom:8px;left:0;right:0;width:100%;height:3px;z-index:2;pointer-events:none}.am-pageInfiniteArea{position:absolute;left:50%;width:26px;height:3px;overflow:hidden;border-radius:1px;transform:translateX(-50%)}.am-pageInfiniteMove{position:absolute;bottom:0;left:0;width:13px;height:3px;transition:all .1s linear;border-radius:1px}.am-pager{display:flex;justify-content:center}.am-pager-number{flex:0 0 3px;height:3px;overflow:hidden;margin-right:3px;margin-bottom:8px;font-size:0;line-height:0;border-radius:1px;background-color:#ddd}.am-pager-number_white{background-color:rgba(221,221,221,.4)}.am-pager-current{width:13px;height:3px;overflow:hidden;font-size:0;line-height:0;margin-right:3px;border-radius:1px;background-color:#1677ff}.am-pager-current_white{background-color:#fff}.am-pager-lastChild{margin-right:0}